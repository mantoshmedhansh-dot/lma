# ==============================================
# LMA Environment Variables
# Copy this file to .env.local and fill in values
# ==============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
API_SECRET=your-api-secret

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Maps Configuration (choose one)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxx
MAPBOX_SECRET_TOKEN=sk.xxx
# OR
NEXT_PUBLIC_GOOGLE_MAPS_KEY=xxx

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxx\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=noreply@lma.app

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1xxx

# Error Tracking (Sentry)
SENTRY_DSN=https://xxx@sentry.io/xxx
NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Analytics
MIXPANEL_TOKEN=xxx
NEXT_PUBLIC_MIXPANEL_TOKEN=xxx

# Application
NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# CI/CD Configuration (GitHub Actions)
# ==============================================

# Vercel
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_WEB_PROJECT_ID=
VERCEL_ADMIN_PROJECT_ID=
VERCEL_SUPERADMIN_PROJECT_ID=

# Render
RENDER_API_KEY=
RENDER_STAGING_SERVICE_ID=
RENDER_PRODUCTION_SERVICE_ID=

# Notifications
SLACK_WEBHOOK_URL=

# Turborepo Remote Cache
TURBO_TOKEN=
TURBO_TEAM=
