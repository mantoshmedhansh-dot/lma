{
  "name": "lma",
  "version": "0.1.0",
  "private": true,
  "description": "Last Mile Delivery Application - Enterprise-grade delivery platform",
  "author": "LMA Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@lma/web",
    "dev:admin": "turbo run dev --filter=@lma/admin",
    "dev:api": "turbo run dev --filter=@lma/api",
    "dev:mobile": "turbo run dev --filter=@lma/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@lma/web",
    "build:admin": "turbo run build --filter=@lma/admin",
    "build:api": "turbo run build --filter=@lma/api",
    "start:api": "turbo run start --filter=@lma/api",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:web": "playwright test --project=web-chromium",
    "test:e2e:admin": "playwright test --project=admin-chromium",
    "test:e2e:superadmin": "playwright test --project=superadmin-chromium",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd packages/database && pnpm migrate",
    "db:seed": "cd packages/database && pnpm seed",
    "db:reset": "cd packages/database && pnpm reset",
    "db:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/shared/src/types/database.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
